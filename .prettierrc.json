{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "experimentalTernaries": true,
  "printWidth": 120,
  "tabWidth": 4,
  "useTabs": true,
  "semi": true,
  "quoteProps": "consistent",
  "trailingComma": "all",
  "bracketSpacing": false,
  "bracketSameLine": true,
  "endOfLine": "lf"
}
