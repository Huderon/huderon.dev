---
import {Rss, GitBranch} from "lucide-astro";
---

<footer>
	<section class="footer-links">
		<a href="/rss.xml" title="RSS feed">
			<Rss />
			RSS feed
		</a>
		<a href="https://github.com/Huderon/huderon.dev" title="Source code">
			<GitBranch />
			Source code
		</a>
	</section>
</footer>

<style>
	footer {
		width: 100%;
		margin-top: auto;
		padding: 0.5rem;
		display: flex;
		justify-content: center;
		font-size: 0.8rem;
	}

	.footer-links {
		display: flex;
		gap: 1rem;
	}

	.footer-links a {
		display: inline-flex;
		gap: 0.2rem;
		text-decoration: none;
		text-align: center;
		align-items: center;
		color: var(--fg);
	}

	.lucide {
		width: 1rem;
	}
</style>
